<%- include('./partials/header')  %>


<% if (pokemons.length > 0) { %>
<h3>    Tous les Pokémons du type :  <%= type %> </h3>
<% } else { %>
    <h3>    Il n'y a pas de Pokémons de type :  <%= type %> </h3>
<% } %>

<div class="main_container">

    <% for (const pokemon of pokemons) { %>

            <a href="/pokemon/<%= pokemon.numero %>">

        <div class="pokemon_home">
            <img class="pokemon_home_img" src="/img/<%= pokemon.numero %>.png" alt="<%= pokemon.nom %>">
            <p class="pokemon_home_title">#<%= pokemon.numero %> <%= pokemon.nom %></p>
        </div>

    </a>

    <% } %>

</div>
<%- include('./partials/footer') %>